  body
    .mountain-background
      nav(class="navbar navbar-inverse", role="navigation")
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-nav')
                span.sr-only Toggle navigation
                span.icon-bar
